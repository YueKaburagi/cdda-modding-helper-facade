
vendors = official
// no vendor prefix

$fr-color = #232b1d
$bg-color = #181416
$font-color = #fcfbfa


html
  max-height: 100vh
  min-height: 100vh
  background: $fr-color
body
  color: $font-color
  font-family: "Migu 1M", serif
  margin: 0px 8px 0 // top にもマージン欲しいんだけど、全体の高さがその分増えてスクロールバーが出ちゃうので
  padding: 0
  max-height: calc(100vh - 8px)
  min-height: calc(100vh - 8px)
  background: $focus-content-color

$focus-content-color = $bg-color
$content-border-color = #e7e4e3
$dragover-border-color = #efe4d3
$dragover-bg-color = #f2fbea
$paddle-color = #dcdcdc
$hover-tab-color = #f2fbea
$tab-color = #cccbca
$paddle-color = $tab-color

$search-button-color = #6db8ba

$search-mode-color = #0073d6
$search-filter-color = #3ea00c
$search-num-color = #9e7500
$search-neg-color = #b7118b
$search-sort-color = #d36b03

img
  vertical-align: middle
  &.search
    width: 21px
    height: 20px
  &.remove
    width: 16px
    height: 14px
  &.add
    width: 18px
    height: 16px
  &.asc
    transform: rotateY(180deg)
    width: 16px
    height: 16px
  &.desc
    transform: rotateZ(180deg)
    width: 16px
    height: 16px

div
  &.content
    display: none
  &.focus
    background: $focus-content-color
    display: block
  &.search-area
    position: fixed
    width: 98%
    bottom: 0
    .query-info
      display: flex
    .search-button
      border: none
      background: $search-button-color
      border-radius: 2px
      padding: 4px
      margin: 0 2px 0 0
      transition-property: height,width
      transition-duration: 0.58s
      width: 29px
      height: 28px
      &:focus, &:hover
        background: #8ec1ca
    .query-indicator
      display: inline
      padding: 3px 0 0 0
      & > span
        padding: 1px 3px
        margin: 0 2px 0 1px
        display: inline-block
    .query-helper
      *
        display: inline-block
      input
        width: 42px
      span
        padding: 0 3px
        margin: 0 2px 0 1px
    .query-indicator, .query-helper
      span
        border-radius: 0 4px 4px 0
        white-space: nowrap
        button
          padding: 0
          margin: 0
          border: none
          background: transparent
          &.remove:hover, &.add:hover
            background: rgba(255,255,255,0.3)
          &.remove, &.add
            padding-right: 1px
            margin-right: 1px
            vertical-align: text-top
      .mode
        background: $search-mode-color
      .filter
        background: $search-filter-color
      .no
        background: $search-neg-color
      .up-to
        background: $search-num-color
      .sort
        background: $search-sort-color
      .unknown
        background: #8c8c8c
    .search-bar
      width: 100%
      transition-property: height
      transition-duration: 0.58s
      input
        width: 100%
        height: 100%
        border: none
        padding: 0
        &:focus
          box-shadow: 0 3px 11px -2px #7b6b1b inset
    .search-bar-hide
      height: 0
    .search-bar-show
      height: 22px
    .nyoki
      bottom: 0
      background: #4d7cd0
      border-radius: 8px 8px 0 0 / 4px 4px 0 0
      transition-property: height
      transition-duration: 0.75s
    .nyoki-inactive
      height: 0
      padding: 0
      margin: 0
    .nyoki-active
      height: 52px
      padding: 1px 2px 0
      margin: 1px 0 0 0

div
  &.droparea
    padding: 2em
    border: solid 2px $content-border-color
    border-radius: 1em
  &.dragover
    border-color: $dragover-border-color
    background: $dragover-bg-color
  &.browser
      display: flex
      flex-flow: row nowrap
      align-items: stretch
      height: calc(100vh - 65px)
  &.raw-json
    overflow: auto
    min-height: 30px
    flex: 1
    margin: 0
  &.json-info
    font-size: 16px // 黒背景に白文字なので気持ち大きめ
    span
      padding: 1px 3px
      display: inline-block
    p
      font-size: 82%
  
div
  &.hide
    width: 1px
  &.search-tips
    border-radius: 2px/5px 2px/5px 0 0
  &.info, &.raw
    overflow: auto
  &.horizontal
    height: 7px

.paddle
  display: inline-block 
  background: $paddle-color
  position: absolute
.paddle-x
  height: 100%
  min-height: 1px
  width: 2px
  float: right
  right: 0
  cursor: col-resize
.paddle-y
  height: 2px
  width: 100%
  min-width: 1px
  bottom: 0
  cursor: row-resize
.expand
  position: relative
  overflow: hidden
.expand-w
  min-width: 20px
  height: auto
  overflow-y: auto
div
  width: 100%   // ← これと
.expand-w-tail
  min-width: 0  // ← これ、めっちゃ大事
  display: flex
  flex: 1
  flex-flow: column nowrap
.eow-operation
  display: table-row-group
.expand-h
  min-height: 30px
  overflow-y: auto

ul
  display: inline-block
  padding: 0
  margin: 8px 0 4px

li
  list-style-type: none
  font-family: monospace
  white-space: nowrap
  span
    padding: 0 6px
a:hover
  text-decoration: underline


a.info
  color: $search-button-color
.modname
  font-size: small

.blue
  color: #5d55fc
.black
  color: #2b2b2b
  &:hover
    color: #636363
.brown
  color: #bb4b35
.cyan 
  color: #08e7d1
.dark_gray, .dkgray
  color: #7b7b74
.green
  color: #04b404
.light_blue, .ltblue
  color: #809bff
.light_cyan
  color: #a3fff4
.light_gray, .ltgray
  color: #cccccc
.light_green, .ltgreen
  color: #8ced8c
.light_red, .ltred
  color: #fd8b8b
.magenta
  color: #ec09ec
.pink
  color: #ff80f0
.red
  color: #fb1818
.yellow
  color: #fcfc3b
  
div.tabLine
  margin: 0 0 0 1em
  a
    white-space: nowrap
    display: inline-block
    &.tab
      line-height: 1.2em
      padding: 0 2px
      border: solid 1px $content-border-color
      border-bottom: 0
      border-radius: 6px 6px 0 0
      background: $tab-color
      &:hover
        background: $hover-tab-color
    &.current
      background: $focus-content-color
